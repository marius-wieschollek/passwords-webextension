{
    "manifest_version": 2,
    "name"            : "__MSG_extensionName__",
    "version"         : "1.5.2",
    "description"     : "__MSG_extensionDescription__",
    "author"          : "Marius Wieschollek",
    "default_locale"  : "en",
    "icons"           : {
        "16": "img/passwords-16.png",
        "32": "img/passwords-32.png",
        "48": "img/passwords-48.png",
        "96": "img/passwords-96.png"
    },
    "browser_action"  : {
        "default_icon" : "img/passwords.svg",
        "default_title": "__MSG_browserActionTitle__",
        "default_popup": "html/manager.html",
        "browser_style": true,
        "theme_icons"  : [
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 12
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 16
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 32
            },
            {
                "light": "img/passwords-light.svg",
                "dark" : "img/passwords-dark.svg",
                "size" : 64
            }
        ]
    },
    "applications"    : {
        "gecko": {
            "id": "ncpasswords@mdns.eu"
        }
    },
    "background"      : {
        "scripts": [ "js/background.js" ]
    },
    "content_scripts" : [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js"     : [ "js/client.js" ]
        }
    ],
    "permissions"     : [
        "*://*/*",
        "tabs",
        "menus",
        "storage",
        "notifications",
        "clipboardWrite"
    ]
}